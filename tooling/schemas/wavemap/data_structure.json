{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Properties of wavemap's data structure.",
  "type": "object",
  "$defs": {
    "hashed_blocks": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "type": {
          "const": "hashed_blocks"
        },
        "min_cell_width": {
          "$ref": "value_with_unit/convertible_to_meters.json"
        },
        "min_log_odds": {
          "type": "number"
        },
        "max_log_odds": {
          "type": "number"
        }
      }
    },
    "octree": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "type": {
          "const": "octree"
        },
        "min_cell_width": {
          "$ref": "value_with_unit/convertible_to_meters.json"
        },
        "min_log_odds": {
          "type": "number"
        },
        "max_log_odds": {
          "type": "number"
        },
        "tree_height": {
          "type": "integer"
        }
      }
    },
    "wavelet_octree": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "type": {
          "const": "wavelet_octree"
        },
        "min_cell_width": {
          "$ref": "value_with_unit/convertible_to_meters.json"
        },
        "min_log_odds": {
          "type": "number"
        },
        "max_log_odds": {
          "type": "number"
        },
        "tree_height": {
          "type": "integer"
        }
      }
    },
    "hashed_wavelet_octree": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "type": {
          "const": "hashed_wavelet_octree"
        },
        "min_cell_width": {
          "$ref": "value_with_unit/convertible_to_meters.json"
        },
        "min_log_odds": {
          "type": "number"
        },
        "max_log_odds": {
          "type": "number"
        },
        "tree_height": {
          "type": "integer"
        },
        "only_prune_blocks_if_unused_for": {
          "type": "number"
        }
      }
    },
    "hashed_chunked_wavelet_octree": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "type": {
          "const": "hashed_chunked_wavelet_octree"
        },
        "min_cell_width": {
          "$ref": "value_with_unit/convertible_to_meters.json"
        },
        "min_log_odds": {
          "type": "number"
        },
        "max_log_odds": {
          "type": "number"
        },
        "tree_height": {
          "type": "integer"
        },
        "only_prune_blocks_if_unused_for": {
          "type": "number"
        }
      }
    }
  },
  "required": [
    "type"
  ],
  "properties": {
    "type": {
      "type": "string",
      "enum": [
        "hashed_blocks",
        "octree",
        "wavelet_octree",
        "hashed_wavelet_octree",
        "hashed_chunked_wavelet_octree"
      ]
    }
  },
  "oneOf": [
    {
      "$ref": "#/$defs/hashed_blocks"
    },
    {
      "$ref": "#/$defs/octree"
    },
    {
      "$ref": "#/$defs/wavelet_octree"
    },
    {
      "$ref": "#/$defs/hashed_wavelet_octree"
    },
    {
      "$ref": "#/$defs/hashed_chunked_wavelet_octree"
    }
  ]
}

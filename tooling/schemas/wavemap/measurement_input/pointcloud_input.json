{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "general",
    "integrators"
  ],
  "properties": {
    "type": {
      "const": "pointcloud"
    },
    "general": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "topic_name",
        "topic_type"
      ],
      "properties": {
        "topic_name": {
          "type": "string"
        },
        "topic_type": {
          "type": "string",
          "enum": [
            "PointCloud2",
            "ouster",
            "livox"
          ]
        },
        "topic_queue_length": {
          "type": "integer"
        },
        "processing_retry_period": {
          "$ref": "../value_with_unit/convertible_to_seconds.json"
        },
        "max_wait_for_pose": {
          "$ref": "../value_with_unit/convertible_to_seconds.json"
        },
        "sensor_frame_id": {
          "type": "string"
        },
        "time_offset": {
          "$ref": "../value_with_unit/convertible_to_seconds.json"
        },
        "undistort_motion": {
          "type": "boolean"
        },
        "num_undistortion_interpolation_intervals_per_cloud": {
          "type": "integer"
        },
        "reprojected_pointcloud_topic_name": {
          "type": "string"
        },
        "projected_range_image_topic_name": {
          "type": "string"
        }
      }
    },
    "integrators": {
      "type": "array",
      "items": {
        "$ref": "measurement_integrator/measurement_integrator.json"
      }
    }
  }
}
